<%- include("template/cabecera", {tituloWeb: 'Inicio'}) %>


<div class="container">


    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Acción</th>
          </tr>
        </thead>
        <tbody>
            <% if (arrayPokemon.length > 0) { %>
                <% arrayPokemon.forEach(element => { %>
                   
                   <tr>
                       <th scope="row"><%= element.id %> </th>
                       <td><%= element.nombre %></td>
                       <td><%= element.descripcion %></td>
                       <td><%= element.accion %></td>
                    </tr>
                    
                <% }) %>
               <% } %>
        </tbody>
      </table>


   
</div>





